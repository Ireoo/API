{
    "name": "api",
    "description": "mongodb api basic with nodejs",
    "version": "1.0.0",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "test": "nodemon -e .js app.js",
        "test:vue": "cd vue && npm run dev",
        "reload": "git checkout -- .",
        "precommit": "lint-staged",
        "postinstall": "cd vue && npm i",
        "build": "npm run build:vue && npm run build:pkg",
        "build:vue": "cd vue && npm i && npm run build",
        "build:pkg": "pkg . --build -d --out-dir ./build/ --options max_old_space_size=8192",
        "deloy": "now --public && now alias"
    },
    "lint-staged": {
        "*.{vue,js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "bin": {
        "mian": "app.js"
    },
    "pkg": {
        "scripts": [
            "routes/**/*"
        ],
        "assets": [
            "dist/**/*",
            "config.bak.js"
        ]
    },
    "private": true,
    "dependencies": {
        "compression": "^1.7.3",
        "express": "^4.16.3",
        "md5": "^2.2.1",
        "mongojs": "^2.6.0",
        "morgan": "^1.9.0"
    },
    "devDependencies": {
        "husky": "^0.14.3",
        "lint-staged": "^9.2.0",
        "nodemon": "^1.18.3",
        "pkg": "^4.3.7",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.8.0"
    }
}
